/*
	Program to create following pattern
	*
	**
	***
	****
	for any 'n' lines
*/
#include <stdio.h>

void print_triangle(int nooflines)
{
	int i,j;
	for(i=1; i<=nooflines; ++i)
	{
		for(j=1; j<=i; ++j)
		{
			printf("*");
		}
		printf("\n");
	}
}

void main()
{
	int nooflines;
	printf("\nEnter no. of lines : ");
	scanf("%d",&nooflines);
	print_triangle(nooflines);
}
