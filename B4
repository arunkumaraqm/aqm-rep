#include <stdio.h>

void input(int* arr, int &size)
{
	printf("\nEnter number of elements in array : ");
	scanf("%d",&size);
	arr=new int [size];
	int *cur=arr;
	for(int i=0; i<size; ++i, ++cur)
	{
		printf("\n Enter element %d : ",i+1);
		scanf("%d",cur);
	}
}
void main()
{
	int *arr, size;
	input(arr,size);
}
