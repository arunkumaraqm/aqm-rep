#include <stdio.h>

class Matrix{
	private:
	int row;
	int mat[10][10];

	public:
	void input_mat();
	void print_diag();
};

void Matrix :: input_mat()
{
	printf("\nEnter No. of Rows/Colums for Square Matrix : ");
	scanf("%d",&row);

	int i, j;
	for(i=0; i<row; ++i)
	{
		for(j=0; j<row; ++j)
		{
			printf("\nEnter Element (%d,%d) : ",i+1,j+1);
			scanf("%d",&mat[i][j]);
		}
	}
}

void Matrix :: print_diag()
{
	int i;
	printf("\nLeft Diagonal\n");
	for(i=0; i<row; ++i)
	{
		printf("%d ",mat[i][i]);
	}
	printf("\nRight Diagonal\n");
	for(i=0; i<row; ++i)
	{
		printf("%d ",mat[i][row-i-1]);
	}
}

void main()
{
	Matrix obj;
	obj.input_mat();
	obj.print_diag();
}
