#include <stdio.h>

struct Matrix{
	int row;
	int mat[10][10];
};

void input_mat(struct Matrix *M)
{
	printf("\nEnter No. of Rows/Colums for Square Matrix : ");
	scanf("%d",&(*M).row);

	int i, j;
	int *cur=(*M).mat;
	for(i=0; i<(*M).row; ++i)
	{
		for(j=0; j<(*M).row; ++j, ++cur)
		{
			printf("\nEnter Element (%d,%d) : ",i+1,j+1);
			scanf("%d",cur);
		}
	}
}

void print_diag(struct Matrix M)
{
	int i;
	printf("\nLeft Diagonal\n");
	for(i=0; i<M.row; ++i)
	{
		printf("%d ",M.mat[i][i]);
	}
	printf("\nRight Diagonal\n");
	for(i=0; i<M.row; ++i)
	{
		printf("%d ",M.mat[i][M.row-i-1]);
	}
}

void main()
{
	struct Matrix obj;
	input_mat(&obj);
	print_diag(obj);
}
