#include <stdio.h>

struct List
{
        int *arr;
        int size;
};       
        
void input(struct List obj)
{
        printf("\nEnter No. of Elements in Array : ");
        scanf("%d", &obj.size);
        obj.arr=malloc(obj.size*sizeof(*obj.arr));
        int* cur=obj.arr, i;
        for(i=0; i<obj.size; ++i, ++cur)
        {
                printf("\nEnter Element %d : ",i+1);
                scanf("%d", cur);
        }
        free(obj.arr);
}
        
int main()
{
        struct List obj;      
        input(obj);

        return 0;
}
