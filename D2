#include <stdio.h>
#include <math.h>

void input(float *a, float *b, float *c)
{
	printf("\nQuadratic Equation of the form ax^2+bx+c\n");
	printf("\nEnter a : ");
	scanf("%f", a);
	printf("\nEnter b : ");
	scanf("%f", b);
	printf("\nEnter c : ");
	scanf("%f", c);    
}

int compute(float a,float b, float c, float *value1, float *value2)
{
    float D=b*b-4*a*c;

	if(D<0)
	{
		*value1=-b/(2*a);//real
		*value2=sqrt(-D)/(2*a); //imaginary
		return -1;
	}
	
	else if(D==0)
	{
		*value1=-b/(2*a); value2=0;
		return 0;
	}
	else
	{
		*value1= (-b + sqrt(D))/(2*a);
		*value2= (-b - sqrt(D))/(2*a);
		return 1;
	}
}

void output(float value1, float value2, int flag)
{
    if(flag==0)
    {
        printf("\nThe roots are real and equal. The value is %f", value1);
    }
    else if(flag==-1)
    {
        printf("\nThe roots are imaginary. The values are %f + i( %f ) and %f - i( %f )",value1,value2,value1,value2);
    }
    else
    {
        printf("\nThe roots are %f and %f", value1, value2);
    }
}

int main()
{
	float a,b,c,value1,value2;
	input(&a,&b,&c);
	int flag=compute(a,b,c, &value1, &value2);
	output(value1,value2,flag);
	return 0;
}
